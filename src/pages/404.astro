---
import Layout from '../layouts/Layout.astro';
import { useTranslations } from "../i18n/utils";

const currentLang = 'en';
const t = useTranslations(currentLang);
---

<Layout 
  title="Page Not Found" 
  description="Sorry, the page you are looking for does not exist. Return to Malai Thai Massage Lanzarote homepage."
>
  <div class="flex flex-col items-center justify-center min-h-[70vh] px-4 text-center">
    <h1 class="text-4xl font-bold text-[var(--color-terracotta)] mb-4">404 - Page Not Found</h1>
    <p class="text-xl mb-8">Sorry, the page you are looking for does not exist.</p>
    <a href="/" class="btn bg-[var(--color-terracotta)] text-white hover:bg-[var(--color-atention)] transition-colors">
      Return to Homepage
    </a>
  </div>
</Layout>