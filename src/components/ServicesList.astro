---
import { getCollection } from "astro:content";

const allServices = await getCollection("services");

const services = allServices.sort(
  (a: { data: { sortOrder?: number } }, b: { data: { sortOrder?: number } }) =>
    (a.data.sortOrder || 999) - (b.data.sortOrder || 999)
);
---

<section id="services" class="w-full py-12 px-4">
  <div class="max-w-6xl mx-auto">
    <h2
      class="text-4xl font-semibold mb-8 text-center text-[var(--color-atention)]"
    >
      Our Services
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {
        services.map((service: { data: any; slug: string }, index: number) => {
          const { data, slug } = service;
          const { title, description, img } = data;
          const isLastCard = index === services.length - 1;
          return (
            <article
              class={`card shadow-md mx-auto ${isLastCard ? "md:col-span-2" : ""}`}
            >
              <figure>
                <img
                  src={`${img}`}
                  alt={title}
                  class="w-full h-full object-cover"
                />
              </figure>
              <div class="card-body flex items-center justify-center text-center">
                <h2 class="card-title text-3xl text-[var(--color-atention)]">
                  {title}
                </h2>
                <p class="text-white text-2xl mt-10">{description}</p>
                <div class="card-actions mt-4">
                  <a
                    href={`/services/${slug}`}
                    class="btn btn-xl bg-[var(--color-atention)] text-white border-none"
                  >
                    More info
                  </a>
                </div>
              </div>
            </article>
          );
        })
      }

      <style>
        .card {
          position: relative;
          overflow: hidden;
          border-radius: 0.5rem;
          width: 100%;
          height: 500px; /* Fixed height for all cards */
          max-width: 400px;
        }

        .card::before {
          content: "";
          position: absolute;
          top: 0;
          left: 0;
          width: 100%;
          height: 100%;
          background: rgba(0, 0, 0, 0.7);
          z-index: 1;
          opacity: 0;
          transition: opacity 0.3s ease;
        }

        .card:hover::before {
          opacity: 1;
        }

        .card-body {
          position: absolute;
          top: 0;
          left: 0;
          right: 0;
          bottom: 0;
          padding: 1.5rem;
          z-index: 2;
          opacity: 0;
          transition: opacity 0.3s ease;
          display: flex;
          flex-direction: column;
          justify-content: center;
          align-items: center;
        }

        .card:hover .card-body {
          opacity: 1;
        }

        figure {
          height: 100%;
          margin: 0;
        }

        /* Mobile styles - show text but with transparent background */
        @media (max-width: 768px) {
          .card-body {
            background: rgba(0, 0, 0, 0.5);
            opacity: 1;
          }
        }
      </style>
    </div>
  </div>
</section>
