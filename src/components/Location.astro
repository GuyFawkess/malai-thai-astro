---
import { useTranslations } from "../i18n/utils";

const { currentLang = 'en' } = Astro.props;
const t = useTranslations(currentLang);
---
<section
  id="location"
  class="w-full py-12 px-4 bg-[var(--color-warm-sand)] text-center shadow-md"
>
  <div class="max-w-6xl mx-auto">
    <h2 class="text-3xl font-bold mb-8 text-[var(--color-terracotta)]">
      {t.location.title}
    </h2>
    <div class="flex flex-col md:flex-row gap-8 items-center">
      <iframe
        data-animate="fade-left"
        data-duration="700"
        title="Thai Massage Lanzarote location map"
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2076.5039341827255!2d-13.70523536663836!3d28.920644240456202!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xc46253ff91d6e7b%3A0x70c856f74c0bac27!2sPuerto%20Calero%2C%20Las%20Palmas!5e0!3m2!1sen!2ses!4v1747145548057!5m2!1sen!2ses"
        width="100%"
        height="300"
        style="border:0;"
        allowfullscreen=""
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"
        class="opacity-0 -translate-x-10 md:block w-full md:w-1/2 h-full mr-7 mx-auto md:min-h-80 rounded-sm"
      ></iframe>

      <div data-duration="700" data-animate="fade-right" class="opacity-0 translate-x-10 w-full md:w-1/2 text-left relative">
        <h3 class="text-xl font-medium mb-2 text-[var(--color-atention)]">
          Malai Thai Massage Lanzarote
        </h3>
        <p class="mb-4 leading-relaxed text-[var(--color-deep-charcoal)]">
          {t.location.address}
        </p>
        <h4 class="text-[var(--color-atention)] mb-2 font-medium">
          {t.location.hours}
        </h4>
        <div
          class="absolute rotate-[-4deg] bg-[#fdf6ef] text-[var(--color-terracotta)] left-10 text-sm font-semibold px-5 py-3 rounded shadow-md animate-pulse-slow"
        >
          {t.location.opening}
        </div>
        <p class="text-[var(--color-deep-charcoal)]">
          {t.location.schedule}
        </p>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes pulseSlow {
    0%,
    100% {
      opacity: 1;
      transform: scale(1);
    }
    50% {
      opacity: 0.9;
      transform: scale(1.2);
    }
  }

  .animate-pulse-slow {
    animation: pulseSlow 4s ease-in-out infinite;
  }
</style>
